<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operator : "
        android:id="@+id/operator"

        android:textSize="30dp"/>

    <Spinner
        android:layout_toRightOf="@+id/operator"
        android:scrollbarSize="30dp"
        android:id="@+id/operators"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:entries="@array/operators"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/colorAccent"/>


    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/operator"
        android:text="Operand :"
        android:id="@+id/textOperand"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/operand"
        android:layout_toRightOf="@+id/textOperand"
        android:layout_alignBottom="@+id/textOperand"
        android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textOperand"
        android:text="Submit"
        android:id="@+id/btn_Submit"

        android:textSize="30dp"

        android:backgroundTint="@color/colorBisque"/>


</RelativeLayout>